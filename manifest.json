{
  "manifest_version": 2,

  "name": "Hoppr for Github",
  "description": "This extension will help you to navigate through your java classes just like you do in your IDE.",
  "version": "0.0.0",
  "background": {
    "scripts": [
      "jquery-1.11.3.min.js",
      "background.js"
    ]
  },
  "content_scripts": [{
    "matches": ["*://*.github.com/*"],
    "js": [
      "content.js",
      "jquery-1.11.3.min.js"
    ]
  }],
  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "test.html"
  },
  "permissions": [
   "tabs",
   "*://*.github.com/*",
   "background"
   ]
}
